# ===========================================
# CONFIGURACIÓN DE BASE DE DATOS EN PRODUCCIÓN
# ===========================================
# Reemplaza estos valores con las credenciales de tu base de datos en producción
DATABASE_HOST=tu-host-de-base-de-datos.com
DATABASE_PORT=5432
DATABASE_USER=tu-usuario-de-base-de-datos
DATABASE_PASSWORD=tu-password-de-base-de-datos
DATABASE_NAME=nombre-de-tu-base-de-datos

# ===========================================
# CONFIGURACIÓN JWT
# ===========================================
# Genera claves seguras para producción
JWT_SECRET=tu-jwt-secret-super-seguro-para-produccion
JWT_REFRESH_SECRET=tu-jwt-refresh-secret-super-seguro-para-produccion
ACCESS_TOKEN_EXPIRATION=1h
REFRESH_TOKEN_EXPIRATION=7d

# ===========================================
# CONFIGURACIÓN DE LA APLICACIÓN
# ===========================================
NODE_ENV=production
CORS=true

# ===========================================
# CONFIGURACIÓN DE GOOGLE CLOUD STORAGE (OPCIONAL)
# ===========================================
# Solo si usas Google Cloud Storage para archivos
GCS_PROJECT_ID=tu-proyecto-gcs
GCS_BUCKET_NAME=tu-bucket-gcs
GCS_KEY_FILE=google-strategy-new.json
GCS_KEY_FILE_PATH=./cmpc-backend/google-strategy-new.json

# ===========================================
# CONFIGURACIÓN DEL FRONTEND
# ===========================================
# URL donde estará disponible tu backend
VITE_API_URL=http://localhost:3000
